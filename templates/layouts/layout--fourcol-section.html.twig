{#
/**
 * @file
 * Override the template for a four-column layout.
 * See the duo_layouts module.
 *
 * Available variables:
 * - content: The content for this layout.
 * - attributes: HTML attributes for the layout <div>.
 *
 * @ingroup themeable
 */
#}
{% if content %}
  <div{{ attributes }}>

    <div class="layout__container">
      
      <h2 class="layout__heading">{{ content.heading }}</h2>

      <div class="layout__content grid-x grid-margin-x">

        {% if content.first %}
          <div {{ region_attributes.first.addClass('layout__region', 'cell', 'medium-3') }}>
            {{ content.first }}
          </div>
        {% endif %}

        {% if content.second %}
          <div {{ region_attributes.second.addClass('layout__region', 'cell', 'medium-3') }}>
            {{ content.second }}
          </div>
        {% endif %}

        {% if content.third %}
          <div {{ region_attributes.third.addClass('layout__region', 'cell', 'medium-3') }}>
            {{ content.third }}
          </div>
        {% endif %}

        {% if content.fourth %}
          <div {{ region_attributes.fourth.addClass('layout__region', 'cell', 'medium-3') }}>
            {{ content.fourth }}
          </div>
        {% endif %}

      </div>

    </div>

  </div>
{% endif %}
