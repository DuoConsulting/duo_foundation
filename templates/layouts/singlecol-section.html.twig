{#
/**
 * @file
 * Override the template for a single-column layout.
 * See the duo_layouts module.
 *
 * Available variables:
 * - content: The content for this layout.
 * - attributes: HTML attributes for the layout <div>.
 *
 * @ingroup themeable
 */
#}

{% extends '@duo_layouts/section.html.twig' %}

{% block content %}

  {% if content.first %}
    <div {{ region_attributes.first.addClass('layout__region') }}>
      {{ content.first }}
    </div>
  {% endif %}

{% endblock %}
