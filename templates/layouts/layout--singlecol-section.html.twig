{#
/**
 * @file
 * Override the template for a single-column layout.
 * See the duo_layouts module.
 *
 * Available variables:
 * - content: The content for this layout.
 * - attributes: HTML attributes for the layout <div>.
 *
 * @ingroup themeable
 */
#}
{% if content %}
  <div{{ attributes.addClass(classes) }}>

    <div class="layout__container">
      
      <h2 class="layout__heading">{{ content.heading }}</h2>

      <div class="layout__content">

        {% if content.first %}
          <div {{ region_attributes.first.addClass('layout__region') }}>
            {{ content.first }}
          </div>
        {% endif %}

      </div>

    </div>

  </div>
{% endif %}
