{#
/**
 * @file
 * Override the template for a three-column layout.
 * See the duo_layouts module.
 *
 * Available variables:
 * - content: The content for this layout.
 * - attributes: HTML attributes for the layout <div>.
 *
 * @ingroup themeable
 */
#}
{% if content %}
  <div{{ attributes }} {% if attributes.background_image_url %}style="background-image: url({{ attributes.background_image_url }})"{% endif %}>

    <div class="layout__container">
      
      {% if content.heading %}
        <h2 class="layout__heading">{{ content.heading }}</h2>
      {% endif %}

      <div class="layout__content grid-x grid-margin-x">

        {% if content.first %}
          <div {{ region_attributes.first.addClass('layout__region', 'cell', class_first) }}>
            {{ content.first }}
          </div>
        {% endif %}

        {% if content.second %}
          <div {{ region_attributes.second.addClass('layout__region', 'cell', class_second) }}>
            {{ content.second }}
          </div>
        {% endif %}

        {% if content.third %}
          <div {{ region_attributes.third.addClass('layout__region', 'cell', class_third) }}>
            {{ content.third }}
          </div>
        {% endif %}

      </div>

    </div>

  </div>
{% endif %}
